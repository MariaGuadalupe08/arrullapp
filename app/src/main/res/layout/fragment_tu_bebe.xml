<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pastel_yellow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:text="¡Cómo va tu bebé!"
            android:textColor="@color/text_color"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:visibility="visible" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:background="@drawable/button_background"
                    android:textColor="@android:color/white"
                    android:layout_margin="8dp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:background="@drawable/button_background"
                    android:textColor="@android:color/white"
                    android:layout_margin="8dp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:background="@drawable/button_background"
                    android:textColor="@android:color/white"
                    android:layout_margin="8dp" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:background="@drawable/button_background"
                    android:textColor="@android:color/white"
                    android:layout_margin="8dp" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:background="@drawable/button_background"
                    android:textColor="@android:color/white"
                    android:layout_margin="8dp" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:background="@drawable/button_background"
                    android:textColor="@android:color/white"
                    android:layout_margin="8dp" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:background="@drawable/button_background"
                    android:textColor="@android:color/white"
                    android:layout_margin="8dp" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:background="@drawable/button_background"
                    android:textColor="@android:color/white"
                    android:layout_margin="8dp" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:background="@drawable/button_background"
                    android:textColor="@android:color/white"
                    android:layout_margin="8dp" />

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/card_background"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="8dp"
                android:elevation="4dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imagenBebe"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="16dp" />

                <!-- Nuevo Texto -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¡Mi primer mes! Viva la vida..."
                    android:textSize="18sp"
                    android:textColor="@color/text_color"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="center"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/descripcionBebe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:fontFamily="@font/roboto" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Segunda card flotante -->
    <LinearLayout
        android:id="@+id/cardFruta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/card_background"
        android:layout_gravity="center|top"
        android:layout_marginTop="220dp"
        android:elevation="4dp"
        android:gravity="center"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_gravity="end" />

        <TextView
            android:id="@+id/descripcionFruta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/text_color"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:fontFamily="@font/roboto" />

        <ImageView
            android:id="@+id/imagenFruta"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</FrameLayout>
